{% extends 'base.html.twig' %}

{% block title %}Hello AccessControlTestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user is not null %}
    <h1>Hello {{ app.user.email }}! ✅</h1>

    <p>Tu accès à la page {{ app.current_route }}</p>
    <p>Tes roles:</p>
    <ul>
        {% for role in app.user.roles %}
        <li>{{ role }}</li>
        {% endfor %}
    </ul>
    {% else %}
        <p>Tu es un visiteur anonyme</p>
    {% endif %}
</div>
    {% if is_granted('ROLE_ADMIN') %}
        Le message secret des admins est : c'est bientot le week-end
    {% endif %}
{% endblock %}
